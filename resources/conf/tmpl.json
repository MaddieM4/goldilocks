{
    "meta": {
        "overview_title": "A simple templating example",
        "admin": "Scooby Doo",
        "contact": "1-800-555-1334"
    },
    "rpc_alias": {
        "default" : "https://alladin:opensesame@localhost/"
    },
    "services":  {
        "nginx" : {
            "description" : "Turn nginx on and off",
            "address"     : "<some long bitcoin addr>",
            "threshold"   : "0 BTC",
            "commands"    : {
                "start" : "sudo /bin/goldilocks_start",
                "stop"  : "sudo /bin/goldilocks_stop",
                "status": "pgrep nginx"
            }
        }
    },
    "schedules": {
        "daily_retrieval" : {
            "from" : "<same bt addr as earlier>",
            "to" : "<personal bt addr>",
            "amount" : "0.002 BTC",
            "frequency" : "0 5 * * *"
        }
    },
    "templates": {
        "overview" : {
            "source" : "resources/tmpl/overview.src",
            "output" : "resources/tmpl/overview.html"
        },
        "global_json_dump" : {
            "source" : "core.json",
            "output" : "resources/tmpl/core.json"
        }
    }
}
